<Window x:Class="PetShopWPF.AccountWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PetShopWPF"
        mc:Ignorable="d"
        Title="AccountWindow" Height="450" Width="800">
    <Grid>
        <TextBlock FontSize="30" x:Name="tbSuper" HorizontalAlignment="Left" Margin="164,24,0,0" TextWrapping="Wrap" Text="Super Pet" VerticalAlignment="Top" Width="132">
            <TextBlock.Background>
                <ImageBrush/>
            </TextBlock.Background>
        </TextBlock>
        <ListView Name="lvEmployee" Margin="0,117,314,0">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Account ID" Width="120" DisplayMemberBinding="{Binding Path=AccountId}"/>
                    <GridViewColumn Header="Account Name" Width="120" DisplayMemberBinding="{Binding Path=Account1}"/>
                    <GridViewColumn Header="Email" Width="100" DisplayMemberBinding="{Binding Path=Email, StringFormat=dd/MM/yyyy}"/>

                    <GridViewColumn Header="Phone" Width="140" DisplayMemberBinding="{Binding Path=PhoneNumber}"/>

                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Window>
